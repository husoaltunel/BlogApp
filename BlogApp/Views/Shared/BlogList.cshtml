
@model IEnumerable<BlogApp.Models.BlogModel>
@{
    ViewBag.Title = "Index";
}

<h2 style="color:brown;">Blog List</h2>

@if(Model.Count() == 0)
{
<div class="alert alert-warning">
    <span class="glyphicon glyphicon-remove"></span>
    <strong> There isn't any blog</strong> 
</div>
}

@foreach (var blog in Model)
{
    <div class="blog">
        <h3 class="page-header">
            @blog.Title
        </h3>
        <p>
            <span class="glyphicon gylphicon-time"></span>
            @blog.UploadDate
        </p>
        <hr />
        <img class="img-responsive" src="http://placehold.it/900x300" />
        <hr />
        <p>
            @blog.Description
        </p>
        @Html.ActionLink("For More..", "Details", "Blog", new { id = @blog.Id }, new { @class = "btn btn-primary" })
    </div>
}

@section RightSection{
    <div class="well">
        <h4>Blog Search</h4>
        <div class="input-group">
            <input class="form-control" type="text" name="name" value="" />
            <span class="input-group-btn">
                <button type="button" class="btn btn-primary">
                    <span class="glyphicon glyphicon-search">

                    </span>
                </button>
            </span>
        </div>
    </div>
    @{ Html.RenderAction("CategoryList", "Category");}
}

